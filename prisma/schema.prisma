generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LIBRARIAN
  MEMBER
}

enum BookStatus {
  AVAILABLE
  BORROWED
  ARCHIVED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  loans    Loan[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id          String     @id @default(cuid())
  title       String
  author      String
  isbn        String?
  publisher   String?
  year        Int?
  language    String?
  tags        String     @default("") // comma-separated for simple search
  description String     @default("")
  status      BookStatus @default(AVAILABLE)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  loans Loan[]

  @@index([title])
  @@index([author])
  @@index([isbn])
  @@index([status])
}

model Loan {
  id           String   @id @default(cuid())
  bookId       String
  borrowerId   String
  checkedOutAt DateTime @default(now())
  dueAt        DateTime?
  checkedInAt  DateTime?

  book     Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  borrower User @relation(fields: [borrowerId], references: [id], onDelete: Cascade)

  @@index([bookId, checkedInAt])
  @@index([borrowerId, checkedInAt])
}

