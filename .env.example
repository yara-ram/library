# Server
PORT="3001"
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE"
SESSION_SECRET="replace-me-with-a-long-random-string"
CLIENT_URL="http://localhost:5173"

# Local dev helper (disable in prod)
DEV_LOGIN_ENABLED="true"

# Cookie settings (for local dev keep secure=false + samesite=lax)
# For cross-site deployments you'll likely want: COOKIE_SECURE=true + COOKIE_SAMESITE=none
COOKIE_SECURE="false"
COOKIE_SAMESITE="lax"

# SSO (pick one or both)
# GitHub OAuth app callback: http://localhost:3001/auth/github/callback
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Google OAuth app callback: http://localhost:3001/auth/google/callback
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Client (Vite)
VITE_API_BASE_URL="http://localhost:3001"

# Optional AI (OpenAI)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"
